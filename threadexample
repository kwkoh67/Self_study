import threading
import time

def say(msg):
	while True:
		time.sleep(1)
		print(msg)

for msg in ['you','need','python']:
	t = threading.Thread(target=say,args=(msg,)) # 리스트 갯수만큼 thread 생성, 1초에 한번씩 say()
	t.daemon = True # main 프로그램 종료시 꺼짐
	t.start()

for i in range(100): #메인 함수
	time.sleep(0.1)
	print(i)